<h2 class="country-header"><%= country.country %></h2>
<p class="country-region"><%= country.region %></p>
<img src="/<%= country.image %>">

<h2 class="resorts-header">Resort Information</h2>
<ul>
  <% country.resort.forEach(resort => { %>
    <li class="country-resort">
      <h4><%= resort.name %></h4>
      <h6><%= resort.website %></h6>
      <h6><%= resort.lat %> <%= resort.lng %></h6>
      <p><%= resort.description %></p>
      <p data-lat="<%= resort.lat %>" data-lng="<%= resort.lng %>" class="weather">Current Weather: <span>Loading...</span></p>
    </li>
  <% }) %>
</ul>
