<%# <body background="/images/bg-image3.jpg">%>

<h2 class="add-resort-index-header"><a href="countries/new"></a>Add Resort</h2>
<ul>
  <% Object.keys(countries).forEach(region => { %>
    <li>
      <h2 class= "index-region-header"><%= region %></h2>
      <ul>
        <% countries[region].forEach(country => { %>
          <li><a href="/countries/<%= country.id %>"><%= country.country %></a></li>
        <% }); %>
      </ul>
    </li>
  <% }); %>
</ul>

</body>
